{
  "manifest_version": 2,
  "name": "Lurker's luck",
  "version": "1.0",
  "icons": {
    "48": "icons/icon.png"
  },
  "description": "Redirects all reddit.com requests to libredd.it!",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.reddit.com/*"
  ],
  "background": {
    "scripts": [
      "lurkersluck.js"
    ]
  },
  "page_action": {
    "default_icon": "icons/icon.png",
    "browser_style": true
  }
}
